<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.work.javafx.controller.CourseSelectionController"
            prefHeight="600.0" prefWidth="900.0"
            styleClass="root">

    <!-- 顶部导航栏 -->
    <top>
        <HBox styleClass="top-bar">
            <Label text="教务管理系统" styleClass="app-title"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button styleClass="user-btn" text="谭同学" />
            <Button styleClass="logout-btn" text="退出登录" onAction="#logout" />
        </HBox>
    </top>

    <!-- 左侧菜单 -->
    <left>
        <VBox styleClass="side-menu">
            <Button fx:id="homeBtn" styleClass="menu-item" text="首页" onAction="#switchToHome">
                <graphic>
                    <Region styleClass="home-icon"/>
                </graphic>
            </Button>
            <Button fx:id="personalCenterBtn" styleClass="menu-item" text="个人中心" onAction="#switchToPersonalCenter">
                <graphic>
                    <Region styleClass="user-icon"/>
                </graphic>
            </Button>
            <Button fx:id="courseScheduleBtn" styleClass="menu-item" text="课表查询" onAction="#switchToCourseSchedule">
                <graphic>
                    <Region styleClass="course-icon"/>
                </graphic>
            </Button>
            <Button fx:id="courseSelectionBtn" styleClass="menu-item, active-menu-item" text="选课系统" onAction="#switchToCourseSelection">
                <graphic>
                    <Region styleClass="select-course-icon"/>
                </graphic>
            </Button>
            <Button fx:id="gradeQueryBtn" styleClass="menu-item" text="成绩查询" onAction="#switchToGradeQuery">
                <graphic>
                    <Region styleClass="grade-icon"/>
                </graphic>
            </Button>
            <Button fx:id="teachingEvaluationBtn" styleClass="menu-item" text="教学评价" onAction="#switchToTeachingEvaluation">
                <graphic>
                    <Region styleClass="evaluation-icon"/>
                </graphic>
            </Button>
        </VBox>
    </left>

    <!-- 主内容区域 -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="content-scroll-pane" VBox.vgrow="ALWAYS">
            <content>
                <VBox styleClass="content-area">
                    <HBox styleClass="content-header">
                        <Label text="选课系统" styleClass="content-title"/>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="2024-2025学年 第二学期" styleClass="current-semester-label"/>
                    </HBox>

                    <!-- 选课系统导航 -->
                    <HBox styleClass="course-selection-nav">
                        <Button fx:id="thisTermBtn" text="本学期选课" styleClass="nav-button, active-nav-button" onAction="#showThisTermCourses"/>
                        <Button fx:id="generalCourseBtn" text="通识选修课" styleClass="nav-button" onAction="#showGeneralCourses"/>
                        <Button fx:id="selectedCoursesBtn" text="已选课程" styleClass="nav-button" onAction="#showSelectedCourses"/>
                        <Button fx:id="courseResultBtn" text="选课结果" styleClass="nav-button" onAction="#showCourseResults"/>
                    </HBox>
                    
                    <!-- 课程查询条件区域 -->
                    <VBox styleClass="query-container">
                        <GridPane styleClass="query-form" hgap="20" vgap="15">
                            <padding>
                                <Insets top="15" right="15" bottom="15" left="15"/>
                            </padding>
                            
                            <!-- 学院 -->
                            <Label text="学院" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="collegeComboBox" promptText="所有学院" 
                                    prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                            
                            <!-- 课程性质 -->
                            <Label text="课程性质" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                            <ComboBox fx:id="courseTypeComboBox" promptText="所有类型" 
                                    prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                            
                            <!-- 课程名称 -->
                            <Label text="课程名称" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="courseNameField" promptText="输入课程名称或代码" 
                                    prefWidth="420" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
                            
                            <Button fx:id="searchButton" text="查询" styleClass="primary-button" 
                                   GridPane.rowIndex="1" GridPane.columnIndex="3" onAction="#searchCourses"/>
                        </GridPane>
                    </VBox>
                    
                    <!-- 课程列表显示区域 -->
                    <VBox styleClass="course-list-container">
                        <!-- 颜色说明 -->
                        <HBox styleClass="status-legend">
                            <HBox styleClass="legend-item">
                                <Region styleClass="legend-dot, available-dot"/>
                                <Label text="可选" styleClass="legend-text"/>
                            </HBox>
                            <HBox styleClass="legend-item">
                                <Region styleClass="legend-dot, selected-dot"/>
                                <Label text="已选" styleClass="legend-text"/>
                            </HBox>
                            <HBox styleClass="legend-item">
                                <Region styleClass="legend-dot, full-dot"/>
                                <Label text="已满" styleClass="legend-text"/>
                            </HBox>
                            <Region HBox.hgrow="ALWAYS" />
                            <Label fx:id="courseCountLabel" text="共找到5门课程" styleClass="course-count"/>
                        </HBox>
                        
                        <!-- 课程表格 -->
                        <TableView fx:id="courseTableView" styleClass="course-table" VBox.vgrow="ALWAYS">
                            <placeholder>
                                <Label text="没有符合条件的课程" style="-fx-text-fill: #999; -fx-font-style: italic;"/>
                            </placeholder>
                            <columns>
                                <TableColumn fx:id="numberColumn" text="序号" prefWidth="50"/>
                                <TableColumn fx:id="courseCodeColumn" text="课程代码/名称" prefWidth="200"/>
                                <TableColumn fx:id="creditColumn" text="学分" prefWidth="60"/>
                                <TableColumn fx:id="courseTypeColumn" text="课程性质" prefWidth="100"/>
                                <TableColumn fx:id="teacherColumn" text="任课教师" prefWidth="100"/>
                                <TableColumn fx:id="timeLocationColumn" text="上课时间/地点" prefWidth="180"/>
                                <TableColumn fx:id="capacityColumn" text="容量/已选" prefWidth="100"/>
                                <TableColumn fx:id="actionColumn" text="操作" prefWidth="100"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                        
                        <!-- 分页区域 -->
                        <HBox styleClass="pagination-container">
                            <Button text="上一页" styleClass="pagination-button" onAction="#previousPage"/>
                            <Region styleClass="pagination-spacer"/>
                            <Label fx:id="currentPageLabel" text="1" styleClass="current-page"/>
                            <Region styleClass="pagination-spacer"/>
                            <Button text="下一页" styleClass="pagination-button" onAction="#nextPage"/>
                        </HBox>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane> 