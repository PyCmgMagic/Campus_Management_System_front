<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.work.javafx.controller.MainViewController"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="root">

    <!-- 顶部导航栏 -->
    <top>
        <HBox styleClass="top-bar">
            <Label text="教务管理系统" styleClass="app-title"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button styleClass="user-btn" text="谭同学" />
            <Button styleClass="logout-btn" text="退出登录" onAction="#logout" />
        </HBox>
    </top>

    <!-- 左侧菜单 -->
    <left>
        <VBox styleClass="side-menu">
            <Button fx:id="homeBtn" styleClass="menu-item, active-menu-item" text="首页" onAction="#switchToHome">
                <graphic>
                    <Region styleClass="home-icon"/>
                </graphic>
            </Button>
            <Button fx:id="personalCenterBtn" styleClass="menu-item" text="个人中心" onAction="#switchToPersonalCenter">
                <graphic>
                    <Region styleClass="user-icon"/>
                </graphic>
            </Button>
            <Button fx:id="courseScheduleBtn" styleClass="menu-item" text="课表查询" onAction="#switchToCourseSchedule">
                <graphic>
                    <Region styleClass="course-icon"/>
                </graphic>
            </Button>
            <Button fx:id="courseSelectionBtn" styleClass="menu-item" text="选课系统" onAction="#switchToCourseSelection">
                <graphic>
                    <Region styleClass="select-course-icon"/>
                </graphic>
            </Button>
            <Button fx:id="gradeQueryBtn" styleClass="menu-item" text="成绩查询" onAction="#switchToGradeQuery">
                <graphic>
                    <Region styleClass="grade-icon"/>
                </graphic>
            </Button>
            <Button fx:id="teachingEvaluationBtn" styleClass="menu-item" text="教学评价" onAction="#switchToTeachingEvaluation">
                <graphic>
                    <Region styleClass="evaluation-icon"/>
                </graphic>
            </Button>
        </VBox>
    </left>

    <!-- 主内容区域 -->
    <center>
        <VBox styleClass="content-area">
            <HBox styleClass="content-header">
                <Label text="首页" styleClass="content-title"/>
            </HBox>

            <VBox styleClass="schedule-container">
                <HBox styleClass="schedule-header">
                    <Label text="今日课程" styleClass="schedule-title"/>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button text="查看完整课表" styleClass="view-all-btn" onAction="#switchToCourseSchedule"/>
                </HBox>

                <VBox styleClass="date-display">
                    <Label text="2023年3月15日 星期六" styleClass="date-text"/>
                </VBox>

                <VBox styleClass="course-item">
                    <HBox styleClass="course-time">
                        <Label text="08:00 - 09:40" styleClass="time-text"/>
                    </HBox>
                    <HBox styleClass="course-info">
                        <VBox>
                            <Label text="高等数学 (II)" styleClass="course-name"/>
                            <HBox styleClass="course-location">
                                <Region styleClass="location-icon"/>
                                <Label text="理科楼 A203" styleClass="location-text"/>
                            </HBox>
                        </VBox>
                    </HBox>
                </VBox>

                <VBox styleClass="course-item">
                    <HBox styleClass="course-time">
                        <Label text="10:10 - 11:50" styleClass="time-text"/>
                    </HBox>
                    <HBox styleClass="course-info">
                        <VBox>
                            <Label text="大学物理实验" styleClass="course-name"/>
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>