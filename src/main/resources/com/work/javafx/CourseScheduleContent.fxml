<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" styleClass="main-scroll-pane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.work.javafx.controller.CourseScheduleContentController"
            VBox.vgrow="ALWAYS">
    <VBox styleClass="content-area" VBox.vgrow="ALWAYS">
        <HBox styleClass="content-header">
            <Label text="课表查询" styleClass="content-title"/>
        </HBox>

        <!-- 查询条件区域 -->
        <VBox styleClass="query-container">
            <HBox>
                <Label text="查询条件" styleClass="section-title"/>
                <Region HBox.hgrow="ALWAYS" />
                <Label text="2024-2025学年 第二学期" styleClass="current-semester-label"/>
            </HBox>
            
            <GridPane styleClass="query-form" hgap="20" vgap="15">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                
                <!-- 学年 -->
                <Label text="学年" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="academicYearComboBox" promptText="2024-2025" 
                        prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                
                <!-- 学期 -->
                <Label text="学期" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <ComboBox fx:id="semesterComboBox" promptText="第二学期" 
                        prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                
                <!-- 课表类型 -->
                <Label text="课表类型" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
                <ComboBox fx:id="scheduleTypeComboBox" promptText="个人课表" 
                        prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="5"/>
            </GridPane>
            
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <padding>
                    <Insets top="0" right="15" bottom="15" left="15"/>
                </padding>
                <Button fx:id="queryButton" text="查询" styleClass="primary-button" onAction="#queryCourseSchedule"/>
            </HBox>
        </VBox>
        
        <!-- 课表显示区域 -->
        <VBox styleClass="schedule-display-container" VBox.vgrow="ALWAYS">
            <HBox styleClass="schedule-display-header">
                <Label text="我的课表" styleClass="schedule-display-title"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="printButton" text="打印课表" styleClass="secondary-button" onAction="#printSchedule"/>
                <Button fx:id="exportButton" text="导出Excel" styleClass="secondary-button" onAction="#exportToExcel"/>
            </HBox>
            
            <!-- 课表表格 -->
            <TableView fx:id="scheduleTableView" styleClass="schedule-table" VBox.vgrow="ALWAYS">
                <placeholder>
                    <Label text="没有课程数据" style="-fx-text-fill: #999; -fx-font-style: italic;"/>
                </placeholder>
                <columns>
                    <TableColumn fx:id="timeColumn" text="节次/星期" prefWidth="100"/>
                    <TableColumn fx:id="mondayColumn" text="周一" prefWidth="110"/>
                    <TableColumn fx:id="tuesdayColumn" text="周二" prefWidth="110"/>
                    <TableColumn fx:id="wednesdayColumn" text="周三" prefWidth="110"/>
                    <TableColumn fx:id="thursdayColumn" text="周四" prefWidth="110"/>
                    <TableColumn fx:id="fridayColumn" text="周五" prefWidth="110"/>
                    <TableColumn fx:id="saturdayColumn" text="周六" prefWidth="110"/>
                    <TableColumn fx:id="sundayColumn" text="周日" prefWidth="110"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            
            <!-- 页脚注释 -->
            <HBox styleClass="schedule-footer">
                <Label text="注: " styleClass="schedule-note"/>
            </HBox>
        </VBox>
    </VBox>
</ScrollPane> 